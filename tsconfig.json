{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015"],
    "typeRoots": [
      "typings/modules",
      "typings/globals"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
